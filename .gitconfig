[user]
	name = Hei
	email = lamyuenhei@gmail.com
[core]
	editor = vim
[color]
	diff = auto
	ui = true
[alias]
	co = checkout
	cm = commit
	st = status -sb
	br = branch
	graph = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
	gr = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
[diff]
	tool = meld
[merge]
	tool = vimdiff
[mergetool "diffmerge"]
	cmd = diffmerge -m -r=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
